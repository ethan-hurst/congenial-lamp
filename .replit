run = "python3 run_replit.py"
entrypoint = "run_replit.py"

[nix]
channel = "stable-22_11"

[env]
VIRTUAL_ENV = "/home/runner/${REPL_SLUG}/venv_linux"
PATH = "${VIRTUAL_ENV}/bin:${PATH}"
PYTHONPATH = "${REPL_HOME}"

[[ports]]
localPort = 8000
externalPort = 80

[[ports]]
localPort = 3000
externalPort = 3000

[gitHubImport]
requiredFiles = [".replit", "replit.nix"]