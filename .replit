modules = ["python-3.12", "nodejs-20", "web", "bash"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Full Stack"

[[workflows.workflow]]
name = "Run Backend"
author = 40017536
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd codeforge/backend && pip install -r requirements.txt && python -m uvicorn src.main:app --host 0.0.0.0 --port 8000 --reload"

[[workflows.workflow]]
name = "Run Frontend"
author = 40017536
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd codeforge/frontend && npm install && npm run dev -- --host 0.0.0.0 --port 5000"

[[workflows.workflow]]
name = "Full Stack"
author = 40017536
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd codeforge/backend && pip install -r requirements.txt && python -m uvicorn src.main:app --host 0.0.0.0 --port 8000 --reload"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd codeforge/frontend && npm install && npm run dev -- --host 0.0.0.0 --port 5000"

[[ports]]
localPort = 5000
externalPort = 80
