run = "python3 run_replit.py"
entrypoint = "run_replit.py"
modules = ["python-3.11", "nodejs-18", "web"]
hidden = [".pythonlibs", "venv_linux", ".git", "node_modules", "__pycache__"]

[nix]
channel = "stable-24_05"

[env]
VIRTUAL_ENV = "/home/runner/${REPL_SLUG}/venv_linux"
PATH = "${VIRTUAL_ENV}/bin:${PATH}"

[[ports]]
localPort = 8000
externalPort = 80

[[ports]]
localPort = 3000
externalPort = 3000

[deployment]
run = ["python3", "run_replit.py"]