# Environment Configuration for CodeForge

# Database
DATABASE_URL=postgresql://codeforge:password@localhost:5432/codeforge
REDIS_URL=redis://localhost:6379/0

# Security
JWT_SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# AI Configuration
CLAUDE_API_KEY=your-claude-api-key
OPENAI_API_KEY=your-openai-api-key
QWEN_MODEL_PATH=/models/qwen2.5-coder
AI_RATE_LIMIT=100

# Cloud Providers
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
GCP_SERVICE_ACCOUNT_KEY=path-to-gcp-key.json
AZURE_STORAGE_CONNECTION_STRING=your-azure-connection-string

# Docker
DOCKER_HOST=unix:///var/run/docker.sock
GVISOR_RUNTIME=runsc

# Credits System
MONTHLY_FREE_CREDITS=100
CREDIT_PRICE_USD=0.01
CREDITS_PER_CPU_HOUR=10
CREDITS_PER_GB_RAM_HOUR=5
CREDITS_PER_GB_STORAGE_MONTH=1

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# External Services
GITHUB_CLIENT_ID=your-github-oauth-client-id
GITHUB_CLIENT_SECRET=your-github-oauth-client-secret
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret

# Feature Flags
ENABLE_GPU_COMPUTING=true
ENABLE_TIME_TRAVEL_DEBUG=true
ENABLE_INSTANT_CLONING=true
ENABLE_MULTI_AGENT_AI=true